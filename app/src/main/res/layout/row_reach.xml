<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/row_reach_layout">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/row_reach_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/reachState_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pendiente"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Overline" />

            <TextView
                android:id="@+id/reachTitle_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="El fotógrafo"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

            <TextView
                android:id="@+id/reachNumber_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Baliza número 1"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

            <TextView
                android:id="@+id/reachTime_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alcanzada a las: 12:20:24"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>